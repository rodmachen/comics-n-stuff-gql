# Supabase pooler URL (used by the running API server)
DATABASE_URL="postgresql://postgres.xxxx:password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true&sslmode=no-verify"

# Supabase direct URL (used by Prisma migrations only â€” bypasses PgBouncer)
DIRECT_DATABASE_URL="postgresql://postgres:password@db.xxxx.supabase.co:5432/postgres"

# Port the API server listens on
PORT=4000

# Comma-separated list of allowed CORS origins
CORS_ORIGINS="https://your-app.vercel.app,http://localhost:3000"

# Node environment: development | production
NODE_ENV=development

# Log level: trace | debug | info | warn | error | fatal
LOG_LEVEL=info
